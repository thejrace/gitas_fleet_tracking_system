<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER"  stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.page.SettingsPageController">
   <children>
      <Label fx:id="uiTitle">
         <styleClass>
            <String fx:value="title" />
            <String fx:value="lbl-white" />
            <String fx:value="lbl-h4" />
         </styleClass>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Label>
      <TabPane prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Genel">
               <graphic>
                  <FontAwesomeIconView glyphName="GEAR" styleClass="icon" />
               </graphic>
          </Tab>
            <Tab text="Arayüz">
               <graphic>
                  <FontAwesomeIconView glyphName="PAINT_BRUSH" styleClass="icon" />
               </graphic>
            </Tab>
            <Tab text="Alarmlar">
               <graphic>
                  <FontAwesomeIconView glyphName="BELL" styleClass="icon" />
               </graphic>
            </Tab>
            <Tab text="Veri">
               <graphic>
                  <FontAwesomeIconView glyphName="DOWNLOAD" styleClass="icon" />
               </graphic>
               <content>
                  <VBox spacing="15.0">
                     <children>
                        <Label styleClass="lbl-gray1" text="Sefer veri kaynağı ayarlarını buradan yapabilirsiniz." />
                        <VBox spacing="10.0">
                           <children>
                              <Label text="Filo Ayarları">
                                 <styleClass>
                                    <String fx:value="lbl-h4" />
                                    <String fx:value="lbl-gray1" />
                                 </styleClass>
                              </Label>
                              <HBox spacing="15.0">
                                 <children>
                                    <Button mnemonicParsing="false" text="Aktif Kaynak">
                                       <styleClass>
                                          <String fx:value="content-btn" />
                                          <String fx:value="content-btn-success" />
                                       </styleClass>
                                    </Button>
                                    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Captcha Gir">
                                       <styleClass>
                                          <String fx:value="content-btn" />
                                          <String fx:value="content-btn-default" />
                                       </styleClass>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </VBox>
                        <VBox layoutX="20.0" layoutY="52.0" spacing="10.0">
                           <children>
                              <Label text="Sunucu Ayarları">
                                 <styleClass>
                                    <String fx:value="lbl-h4" />
                                    <String fx:value="lbl-gray1" />
                                 </styleClass>
                              </Label>
                              <HBox spacing="15.0">
                                 <children>
                                    <Button mnemonicParsing="false" text="Aktif Kaynak Yap">
                                       <styleClass>
                                          <String fx:value="content-btn" />
                                          <String fx:value="content-btn-warning" />
                                       </styleClass>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Raporlar">
               <graphic>
                  <FontAwesomeIconView glyphName="CLIPBOARD" styleClass="icon" />
               </graphic>
            </Tab>
            <Tab text="Kullanıcı">
               <graphic>
                  <FontAwesomeIconView glyphName="USER" styleClass="icon" />
               </graphic>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
