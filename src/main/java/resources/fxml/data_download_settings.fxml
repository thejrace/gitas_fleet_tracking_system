<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="15.0" styleClass="settings-tab-content" xmlns="http://javafx.com/javafx/8.0.231" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.settings.DataDownloadSettingsController">
   <children>
      <Label styleClass="lbl-gray1" text="Sefer veri kaynağı ayarlarını buradan yapabilirsiniz." />
      <VBox spacing="15.0">
         <children>
            <Label text="Filo Ayarları">
               <styleClass>
                  <String fx:value="lbl-h4" />
                  <String fx:value="lbl-gray1" />
               </styleClass>
            </Label>
            <HBox alignment="CENTER_LEFT" styleClass="input-control">
               <children>
                  <Label styleClass="lbl-gray1" text="URL" />
                  <TextField fx:id="uiFleetURLInput" prefHeight="25.0" prefWidth="289.0" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Button fx:id="uiEnableFleetBtn" mnemonicParsing="false" text="Aktif Kaynak">
                     <styleClass>
                        <String fx:value="content-btn" />
                        <String fx:value="content-btn-success" />
                     </styleClass>
                  </Button>
                  <Button fx:id="uiEnterCaptchaBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Captcha Gir">
                     <styleClass>
                        <String fx:value="content-btn" />
                        <String fx:value="content-btn-default" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </VBox>
      <VBox layoutX="20.0" layoutY="52.0" spacing="15.0">
         <children>
            <Label text="Sunucu Ayarları">
               <styleClass>
                  <String fx:value="lbl-h4" />
                  <String fx:value="lbl-gray1" />
               </styleClass>
            </Label>
            <HBox alignment="CENTER_LEFT" styleClass="input-control">
               <children>
                  <Label styleClass="lbl-gray1" text="URL" />
                  <TextField fx:id="uiAPIUrlInput" prefHeight="25.0" prefWidth="289.0" />
               </children>
            </HBox>
            <HBox spacing="15.0">
               <children>
                  <Button fx:id="uiEnableAPIBtn" mnemonicParsing="false" text="Aktif Kaynak Yap">
                     <styleClass>
                        <String fx:value="content-btn" />
                        <String fx:value="content-btn-warning" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="20.0" />
         </padding>
      </VBox>
      <Button fx:id="uiSaveBtn" mnemonicParsing="false" text="Kaydet">
         <styleClass>
            <String fx:value="content-btn" />
            <String fx:value="content-btn-warning" />
         </styleClass>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
