<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="settings-tab-content" xmlns="http://javafx.com/javafx/8.0.231" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.settings.FrequencySettingsController">
   <children>
      <Label styleClass="lbl-gray1" text="Otobüslerin veri güncelleme frekanslarını buradan düzenleyebilirsiniz." />
      <Label layoutX="10.0" layoutY="10.0" text="Frekans Ayarları">
         <styleClass>
            <String fx:value="lbl-yellow" />
            <String fx:value="lbl-h4" />
            <String fx:value="lbl-bold" />
         </styleClass>
      </Label>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label styleClass="lbl-gray1" text="Plan İndirme (sn)" />
            <TextField fx:id="uiPlanFreqInput" prefHeight="25.0" prefWidth="90.0" />
         </children>
         <styleClass>
            <String fx:value="input-control" />
            <String fx:value="align-label" />
         </styleClass>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="84.0">
         <children>
            <Label styleClass="lbl-gray1" text="PDKS İndirme (sn)" />
            <TextField fx:id="uiPDKSFreqInput" prefHeight="25.0" prefWidth="90.0" />
         </children>
         <styleClass>
            <String fx:value="input-control" />
            <String fx:value="align-label" />
         </styleClass>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="124.0">
         <children>
            <Label styleClass="lbl-gray1" text="Hız İndirme (sn)" />
            <TextField fx:id="uiSpeedFreqInput" prefHeight="25.0" prefWidth="90.0" />
         </children>
         <styleClass>
            <String fx:value="input-control" />
            <String fx:value="align-label" />
         </styleClass>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label styleClass="lbl-gray1" text="Plaka İndirme (sn)" />
            <TextField fx:id="uiPlateFreqInput" prefHeight="25.0" prefWidth="90.0" />
         </children>
         <styleClass>
            <String fx:value="input-control" />
            <String fx:value="align-label" />
         </styleClass>
      </HBox>
      <Button fx:id="uiSaveBtn" mnemonicParsing="false" text="Kaydet">
         <styleClass>
            <String fx:value="content-btn" />
            <String fx:value="content-btn-warning" />
         </styleClass>
      </Button>
   </children>
</VBox>
